<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sixth"
    tools:context=".SignupActivity">


    <EditText
        android:id="@+id/susername"

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="180dp"

        android:ems="10"
        android:hint="إسم الطبيب"

        android:inputType="text"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/SSN"

        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="الرقم القومى"
        android:inputType="text"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/emailt"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="البريد الإلكترونى"

        android:inputType="textEmailAddress"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/passwordt1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="كلمة المرور"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordt2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="تأكيد كلمة المرور"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="63dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_btn"
        android:text="تسجيل" />

    <TextView
        android:id="@+id/signuptv"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:text="هل تمتلك حساب بالفعل ؟ سجل دخولك"
        android:textColor="#060816"
        android:textSize="20dp" />

</LinearLayout>
